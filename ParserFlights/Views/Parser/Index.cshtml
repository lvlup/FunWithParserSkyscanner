@model ParserFlights.Models.SearchRouteParameters

@{
    ViewBag.Title = "Поиск рейса";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header text-center">
    <h2>Найти рейс</h2>
</div>

@using (Html.BeginForm("Result", "Parser",FormMethod.Post , new { @class="form-horizontal", role="form" }))
{
	@Html.ValidationSummary()
    <div class="form-group">
		@Html.LabelFor(m => m.Source, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
            @Html.TextBoxFor(p => p.Source, new { @class = "form-control", tabindex = 1 })
        </div>
    </div>

    <div class="form-group">
	    @Html.LabelFor(m => m.DateSource, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
            @Html.TextBoxFor(p => p.DateSource, new { @class = "form-control", tabindex = 2 })
        </div>
    </div>

    <div class="form-group">
	    @Html.LabelFor(m => m.Destination, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
            @Html.TextBoxFor(p => p.Destination, new { @class = "form-control", tabindex = 3 })
        </div>
    </div>

    <div class="form-group">
		@Html.LabelFor(m => m.DateDestination, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
            @Html.TextBoxFor(p => p.DateDestination, new { @class = "form-control", tabindex = 4 })
        </div>
    </div>
  
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg">Найти рейс</button>
        </div>
    </div>
}