@model ParserFlights.ViewModels.RouteInfoVM
@{
    ViewBag.Title = "Результаты поиска";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    <div class="page-header text-center">
        <h2>Найденный результат</h2>
    </div>

    <div class="row-fluid">
        <div class="span3">@Html.LabelFor(m => @Model.Price, new { @class = "col-sm-2 control-label" })</div>
        <div class="span3">@Html.DisplayFor(r => @Model.Price, new { @class = "form-control", tabindex = 1 }))</div>
    </div>

    foreach (var flight in @Model.Routes)
    {
        <div class="container-fluid" style="border: solid 1px black;">
            <div class="container">
                <span class="label label-default">Данные о маршруте</span>
            </div>
            
            <div class="container">
                <div class="row">
                    <div class="col-md-2">@Html.LabelFor(p => flight.AviaCompanyName, new {@class = "col-sm-2 control-label"})</div>
                    <div class="col-md-6">@Html.DisplayFor(p => flight.AviaCompanyName)</div>
                </div>

                <div class="row">
                    <div class="col-md-2">@Html.LabelFor(p => flight.RouteNumber, new {@class = "col-sm-2 control-label"})</div>
                    <div class="col-md-2">@Html.DisplayFor(p => flight.RouteNumber)</div>
                </div>

                <div class="row">
                    <div class="col-md-2">@Html.LabelFor(p => flight.DepartureTime, new {@class = "col-sm-2 control-label"})</div>
                    <div class="col-md-6">@Html.DisplayFor(r => flight.DepartureTime)</div>
                </div>

                <div class="row">
                    <div class="col-md-2">@Html.LabelFor(p => flight.ArrivalTime, new {@class = "col-sm-2 control-label"})</div>
                    <div class="col-md-6">@Html.DisplayFor(r => flight.ArrivalTime)</div>
                </div>
            </div>

        </div>
    }
}