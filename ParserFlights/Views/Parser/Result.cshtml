@model ParserFlights.ViewModels.RouteInfoVM
@{
    ViewBag.Title = "Результаты поиска";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    <div class="page-header text-center">
        <h2>Данные рейса</h2>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => @Model.Price, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(r => @Model.Price, new {@class = "form-control", tabindex = 1}))
        </div>
    </div>

    foreach (var flight in @Model.Routes)
    {
        <form class="form-horizontal" role="form">

            <div class="form-group">
                @Html.LabelFor(p => flight.AviaCompanyName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(p => flight.AviaCompanyName, new { @class = "form-control", tabindex = 1 })
                </div>
            </div>

            <div class="form-group">
               @Html.LabelFor(p => flight.RouteNumber, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(p => flight.RouteNumber, new { @class = "form-control",  tabindex = 2 })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(p => flight.DepartureTime, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(r => flight.DepartureTime, new {@class = "form-control", tabindex = 3})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(p => flight.ArrivalTime, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(r => flight.ArrivalTime, new { @class = "form-control", tabindex = 4 })
                </div>
            </div>

        </form>

        }
}
